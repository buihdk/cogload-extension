{
  "manifest_version": 3,
  "name": "Cognitive Load Visualizer",
  "version": "0.2.1",
  "description": "Analyzes data-heavy dashboards and visualizes cognitive load using structural and interaction metrics.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Cognitive Load Visualizer"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/scoring.js", "content/content.js"],
      "css": ["overlay/overlay.css"],
      "run_at": "document_idle"
    }
  ]
}
